// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders SyncLog[]
}

// Orders model
model Order {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("pending")
  total     Float
  items     Json // Array of order items
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Sync Log for tracking synchronization
model SyncLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "create", "update", "delete"
  table     String   // Which table was modified
  recordId  String   // ID of the modified record
  data      Json     // The actual data that was synced
  synced    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([synced])
}

// Offline changes tracking (for conflict resolution)
model OfflineChange {
  id        String   @id @default(cuid())
  deviceId  String
  table     String
  operation String   // "INSERT", "UPDATE", "DELETE"
  recordId  String
  data      Json
  timestamp DateTime @default(now())
  applied   Boolean  @default(false)

  @@index([deviceId])
  @@index([applied])
}
